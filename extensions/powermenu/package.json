{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "powermenu",
  "version": "0.1.0",
  "title": "Powermenu",
  "description": "Powermenu extension for Vicinae.",
  "categories": [],
  "license": "MIT",
  "author": "kaan-w",
  "contributors": [],
  "pastContributors": [],
  "icon": "power.png",
  "commands": [
    {
      "name": "reboot",
      "title": "Reboot",
      "icon": "rotate-cw.png",
      "description": "Equivalent to `systemctl reboot`",
      "mode": "no-view"
    },
    {
      "name": "poweroff",
      "title": "Poweroff",
      "icon": "power.png",
      "description": "Equivalent to `systemctl poweroff`",
      "mode": "no-view"
    },
    {
      "name": "hibernate",
      "title": "Hibernate",
      "icon": "snowflake.png",
      "description": "Equivalent to `systemctl hibernate`",
      "mode": "no-view"
    },
    {
      "name": "suspend",
      "title": "Suspend",
      "icon": "moon.png",
      "description": "Equivalent to `systemctl suspend`",
      "mode": "no-view"
    },{
      "name": "lock",
      "title": "Lock",
      "icon": "lock.png",
      "description": "Varies depending on environment. Falls back to `loginctl lock-sesion`",
      "mode": "no-view"
    },{
      "name": "log-out",
      "title": "Log Out",
      "icon": "log-out.png",
      "description": "Varies depending on environment. Falls back to `loginctl terminate-user $USER`",
      "mode": "no-view"
    }
  ],
  "preferences": [],
  "scripts": {
    "build": "vici build",
    "dev": "vici develop"
  },
  "dependencies": {
    "@vicinae/api": "^0.9.4"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
